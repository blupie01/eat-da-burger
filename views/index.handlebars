<div id='container'>
	<h1 class='center-align' id='header'>BURGER TIME!</h1>
	<div class='row'>
		<div class='col s6 offset-s3'>
			<div class='form-group center-align'>
				<h3 class='center-align'>Make a burger</h3>
				<form action='/' method='POST'>
					<div class='form-group'>
						<label for='burger'>Burger Name:</label>
						<input type='text' id='burger' name='burger_name'>
					</div>
					<button class="waves-effect waves-light btn blue darken-2" type="submit">Add Burger</button>
				</form>
			</div>
		</div>
	</div>

	<div class='row'>
		<div id='results' class='center-align'>
			<div class='col s6'>
				{{#each burger}}
				<div id='not-eaten' class='center-align'>
					{{#unless this.devoured}}
					<h4>{{this.burger_name}}</h4>
					<form action='/{{this.id}}?_method=PUT' method='POST'>
						<input type='hidden' name='devoured' value='true'>
						<button class="waves-effect waves-light btn red darken-4" type="submit">Eat It!<br>
					</form>
					{{/unless}}
				</div>
				{{/each}}
			</div>
		</div>

		<div class='col s6'>
			{{#each burger}}
			<div id='eaten' class='center-align'>
				{{#if this.devoured}}
				<h4>{{this.burger_name}}</h4>
				<form action='/{{this.id}}?_method=PUT' method='POST'>
					<input type='hidden' name='devoured' value='false'>
					<button class="waves-effect waves-light btn green darken-4" type="submit">Regurgitate</button>
				</form>
				{{/if}}
			</div>
			{{/each}}
		</div>
	</div>
</div>